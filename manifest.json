{
    "manifest_version": 3,
    "name": "Croboost",
    "description": "Lets you remix pages from all over the internet",
    "version": "1.0",
    "permissions": [ "activeTab", "declarativeContent", "storage", "scripting" ],
    "icons": {
      "46": "images/logo.png"
    },
    "action": {
      "default_title": "Click to view a popup",
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js", "js/jquery.js", "js/bootstrap.min.js", "js/chart.js"],
        "css": ["css/content.css", "css/bootstrap.css"]
      }
    ],
    "host_permissions": ["https://api.croboost.ai/v1/auth/manual/login"],
    "background": {
      "service_worker": "js/service_worker.js",
      "type": "module"
    },
    "web_accessible_resources": [
      {
        "resources": ["images/logo.svg", "images/ai-icon.svg", "js/js-confetti.min.js", "js/jquery.js"],
        "matches": ["<all_urls>"]
      }
    ]
}