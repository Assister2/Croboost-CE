{
    "manifest_version": 3,
    "name": "Croboost",
    "description": "Lets you remix pages from all over the internet",
    "version": "1.0",
    "permissions": [ "activeTab", "declarativeContent", "storage", "scripting" ],
    "icons": {
      "46": "images/logo.png"
    },
    "action": {
      "default_title": "Click to view a popup",
      "default_popup": "./popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "host_permissions": ["https://api.croboost.ai/v1/auth/manual/login"],
    "background": {
      "service_worker": "./service_worker.js",
      "type": "module"
    },
    "web_accessible_resources": [
      {
        "resources": ["images/logo.svg", "images/ai-icon.svg", "js-confetti.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
}